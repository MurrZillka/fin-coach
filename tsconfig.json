{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx", // для React
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false, // пока мягкий режим
    "allowJs": true, // разрешаем JS-файлы
    "checkJs": false, // пока не проверяем JS
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}